<div id="study-page">
  <div id="connector1"></div>
  <div id="study-filters-bar">
      <button {{bind-attr class=":study-filter-button isShowingArched"}}{{action "toggleArchived"}}>show archived</button>
      <span class="label">Filters:</span>
      {{#each filters}}
        <button {{bind-attr class=":study-filter-button isSelected"}}{{action "toggleFilter" id}}>{{name}}</button>
      {{/each}}
  </div>
  <div id="study-btn-bar">
    <div id="study-set-name">{{cardSetName}}</div>
  </div>
  {{#if finished}}
    <button {{action 'restart'}} class="action-button">Restart</button>
  {{else}}
    <div id="action-buttons">
      {{#if isShowingFront}}
        <button {{action 'flip'}} id="flipBtn" class="action-button">Show Answer</button>
      {{else}}
        <button {{action 'correct'}} id="correctBtn" class="action-button">Correct</button>
        <button {{action 'wrong}'}} class="action-button">Wrong</button>
      {{/if}}
    </div>
    <div id=study-status-msg>{{statusMsg}}</div>
  {{/if}}

  <div class="study-panel">
    {{#if finished}}
      <div id="study-results">
        You got {{correctCount}} out of {{filteredTotal}} right
      </div>
    {{else}}
      <div id="card-back" {{bind-attr class=":card isShowingFront isShowingBack"}}>
        {{back}}
      </div>
      <div id="card-front" class="card">
        {{front}}
      </div>
    {{/if}}
  </div>
</div>